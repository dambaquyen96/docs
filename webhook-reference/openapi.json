{
  "openapi": "3.0.1",
  "info": {
    "title": "OpenAPI Call Authenticator",
    "description": "Sample Webhook for partner",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "<Your Webhook>"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/webhook": {
      "post": {
        "description": "Webhook bạn cần xây dựng để hứng kết quả xác thực từ hệ thống Call Authenticator",
        "requestBody": {
          "description": "Webhook Request",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WebhookRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Webhook Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebhookResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WebhookRequest": {
        "required": [
          "session_id",
          "verify_code",
          "verify_result"
        ],
        "type": "object",
        "properties": {
          "session_id": {
            "description": "Mã định danh của phiên xác thực",
            "type": "string"
          },
          "verify_code": {
            "description": "Mã kết quả xác thực OTP, là 1 trong các giá trị:\n- 200 : Xác thực thành công\n- 301: Xác thực thất bại - KH có nhấc máy\n- 401: Xác thực thất bại - Không kết nối được KH",
            "type": "integer",
            "format": "int32"
          },
          "verify_result": {
            "description": "Nội dung kết quả xác thực",
            "type": "string"
          },
          "metadata": {
            "description": "Thông tin dữ liệu được bổ sung tại request tương ứng (nếu có)",
            "type": "string"
          }
        }
      },
      "VerifyResponse": {
        "required": [
          "status",
          "msg"
        ],
        "type": "object",
        "properties": {
          "status": {
            "description": "Mã phản hồi.\n200: Thành công.\n!=200: Thất bại.",
            "type": "integer",
            "format": "int32"
          },
          "msg": {
            "description": "Thông báo phản hồi",
            "type": "string"
          }
        }
      }
    }
  }
}
